{
  "name": "trello-electron",
  "productName": "Trello",
  "desktopName": "Trello",
  "version": "0.1.4",
  "description": "Unofficial Trello desktop app",
  "license": "Apache-2",
  "repository": "taypme/trello-electron",
  "author": {
    "name": "Taylor Evanson",
    "email": "dharkflower@gmail.com",
    "url": "https://www.tayp.cloud"
  },
  "engines": {
    "node": ">=20"
  },
  "electronVersion": "39.2.7",
  "scripts": {
    "start": "electron .",
    "build": "electron-packager . --overwrite --out=dist --ignore='^media$' --prune --platform=linux --arch=x64 --icon=static/Icon.png --app-bundle-id=com.taypme.trello --app-version=$npm_package_version && cd dist/Trello-linux-x64/ && zip -ryq9 ../Trello-linux-${npm_package_version}.zip *"
  },
  "files": [
    "index.js",
    "browser.js",
    "browser.css",
    "static/Icon.icns",
    "static/Icon.png",
    "static/Icon.ico"
  ],
  "keywords": [
    "electron",
    "trello"
  ],
  "dependencies": {
    "electron-context-menu": "^4.1.1",
    "electron-debug": "^4.1.0",
    "electron-dl": "^4.0.0"
  },
  "devDependencies": {
    "@electron/packager": "^19.0.1",
    "electron": "^39.2.7"
  }
}
